{% extends 'layout.twig' %}

{% block main %}

  {# sprite output #}
  <style>
      #sprite-output .sprite-output__item {
          display: inline-block;
          vertical-align: middle;
          margin: 15px;
          color: #000000;
          font-size: 14px;
      }
      #sprite-output .sprite-output__item .svg-icon {
        font-size: 24px;
      }

      .btn-example .btn {
          margin-bottom: 20px;
      }

      #sprite-output .sprite-output__item  .svg-icon {
          width: auto;
          height: auto;
          max-width: 100%;
          max-height: 100%;
          display: block;
      }
      #sprite-output .sprite-output__item  .svg-icon svg {
          width: auto;
          height: auto;
          max-width: 150px;
          max-height: 150px;
      }
  </style>

  <h1>Spite icons output</h1>
  <code>
      {&nbsp;% include './includes/icon.twig' with {icon: {name: 'name', class: 'class'}} %&nbsp;}
  </code>
  <div id="sprite-output"></div>
{% endblock %}
